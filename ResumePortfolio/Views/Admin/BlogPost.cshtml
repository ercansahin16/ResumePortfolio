
@model List<BlogPosts>
@{
    ViewData["Title"] = "BlogPost";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
   .shortened {
       max-width: 250px; /* İstediğiniz maksimum genişliği ayarlayın */
       white-space: nowrap; /* Metni tek satırda tut */
       overflow: hidden; /* Taşan metni gizle */
       text-overflow: ellipsis; /* Taşan metin için "..." ekle */
   }



   .img-zoom {
      width: 500px; /* Resmin normal genişliği */
      height: auto; /* Yüksekliği otomatik ayarlar */
      cursor: pointer; /* Tıklanabilir işareti */
   }

   /* Popup için stil */
   .popup {
      display: none; /* Başlangıçta gizli */
      position: fixed; /* Sayfanın üzerinde yer alır */
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.8); /* Koyu arka plan */
      justify-content: center; /* Ortalar */
      align-items: center; /* Ortalar */
   }

      .popup img {
         max-width: 100%; /* Maksimum genişlik %90 */
         max-height: 100%; /* Maksimum yükseklik %90 */
      }

   .close {
      position: absolute; /* Kapatma butonunun konumu */
      top: 20px;
      right: 30px;
      color: white;
      font-size: 30px;
      cursor: pointer; /* Tıklanabilir işareti */
   }
</style>

<div class="row mb-2">
   <div class="col-lg-12">
      <div class="card">
         <div class="card-body">
            <h5 class="card-title mb-4">BlogPost İşlemleri</h5>
            <div class="table-responsive">
               <table class="table center-aligned-table">
                  <thead>
                     <tr class="text-primary">
                        <th>Sıra</th>
                        <th >ImgUrl</th>
                        <th >Url</th>
                        <th>Eklenme Tarihi</th>
                        <th>Link Adı</th>
                        <th>Başlık</th>
                        <th>Ekip ImgUrl</th>
                        <th>AdSoyad</th>
                        <th>Unvan</th>
                        <th>İşlemler</th>
                     </tr>
                  </thead>
                  <tbody>
                     @{
                        var count = 0;
                     }
                     @foreach(var item in Model){
                        count++;
                        <tr class="">
                        <td>@count</td>
                           <td><img class="img-zoom" src="@item.Img" style="width:50px;height:50px;border:solid 1px black" onclick="openPopup(this.src)" /></td>
                           <td class="shortened">@item.catTitle</td>
                        <td>@item.DateTitle</td>
                        <td>@item.HrefTitle</td>
                           <td class="shortened">@item.PTitle</td>
                           <td class="shortened">@item.TeamImg</td>
                        <td>@item.NameSurname</td>
                           <td>@item.Position</td>
                           <td><a href="/Admin/BlogPostUpdate/@item.BlogPostsID" class="btn btn-primary btn-sm">Güncelle</a></td>
                        <td><a href="#" class="btn btn-warning btn-sm">Detay</a></td>
                        <td><a href="#" class="btn btn-danger btn-sm">Sil</a></td>
                     </tr>
                     }
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
</div>

<!-- Popup Yapısı -->
<div class="popup" id="imagePopup">
   <span class="close" onclick="closePopup()">&times;</span>
   <img id="popupImage" src="" alt="Büyük Resim" />
   <script>
      document.getElementById('imagePopup').onclick = function (event) {
         if (event.target === this) {
            closePopup();
         }
      };
      </script>
</div>

<script>
   function openPopup(imageSrc) {
      document.getElementById('popupImage').src = imageSrc; // Resmi ayarlar
      document.getElementById('imagePopup').style.display = 'flex'; // Popup'ı gösterir
   }

   function closePopup() {
      document.getElementById('imagePopup').style.display = 'none'; // Popup'ı gizler
   }
</script>