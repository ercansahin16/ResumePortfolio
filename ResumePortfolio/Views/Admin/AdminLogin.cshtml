
@{
    Layout = null;
}


@{
   var errorMessage = TempData["ErrorMessage"] as string;
}




<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Star Admin2 </title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="../AdminLayout/vendors/feather/feather.css">
  <link rel="stylesheet" href="../AdminLayout/vendors/mdi/css/materialdesignicons.min.css">
  <link rel="stylesheet" href="../AdminLayout/vendors/ti-icons/css/themify-icons.css">
  <link rel="stylesheet" href="../AdminLayout/vendors/typicons/typicons.css">
  <link rel="stylesheet" href="../AdminLayout/vendors/simple-line-icons/css/simple-line-icons.css">
  <link rel="stylesheet" href="../AdminLayout/vendors/css/vendor.bundle.base.css">
  <!-- endinject -->
  <!-- Plugin css for this page -->
  <!-- End plugin css for this page -->
  <!-- inject:css -->
  <link rel="stylesheet" href="../AdminLayout/css/vertical-layout-light/style.css">
  <!-- endinject -->
  <link rel="shortcut icon" href="../AdminLayout/images/favicon.png" />
</head>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
             
                     <div class="brand-logo">
                        <h3>Admin Paneli Girişi</h3>
                     </div>
                @if (!string.IsNullOrEmpty(errorMessage))
                        {
                           <div style="margin-bottom:40px;color:darkred"  class="h6">
                              @errorMessage
                           </div>
                        }
             
              <form class="pt-3" method="post">
                <div class="form-group">
                  <input type="email" name="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">
                </div>
                <div class="form-group">
                  <input type="password" name="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                </div>
                <div class="mt-3">
                  <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" >Giriş</button>
                </div>
                <div class="my-2 d-flex justify-content-between align-items-center">
                  <div class="form-check">
                   
                  </div>
                  <a title="Şifre değiştirme aktif değil" href="#" class="auth-link text-black">Şifremi unuttum?</a>
                </div>
              
               
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <!-- plugins:js -->
  <script src="../AdminLayout/vendors/js/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- Plugin js for this page -->
  <script src="../AdminLayout/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
  <!-- End plugin js for this page -->
  <!-- inject:js -->
  <script src="../AdminLayout/js/off-canvas.js"></script>
  <script src="../AdminLayout/js/hoverable-collapse.js"></script>
  <script src="../AdminLayout/js/template.js"></script>
  <script src="../AdminLayout/js/settings.js"></script>
  <script src="../AdminLayout/js/todolist.js"></script>
  <!-- endinject -->
</body>

</html>


