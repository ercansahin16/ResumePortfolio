
@{
    Layout = null;
}
<link href="~/001 staradmin-free-bootstrap-admin-template-master/css/logincss.css" rel="stylesheet" />

@{
   var errorMessage = TempData["ErrorMessage"] as string;
}



<form method="post">
 
<div class="login wrap" style="display:flex;flex-direction:column;justify-content:center;align-items:center;">

      @if (!string.IsNullOrEmpty(errorMessage))
      {
         <div style="margin-bottom:40px;color:darkred" pattern="^([a-zA-Z0-9_\-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$" class="h6">
            @errorMessage
         </div>
      }
   <div class="h1">Admin Giriş Paneli</div>
    
      <input pattern="^([a-zA-Z0-9_\-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$" placeholder="Email" id="email" name="email" type="text" required="">
    
      <input placeholder="Parola" id="password" name="password" type="password" required="">
   <input value="Giriş" class="btn" type="submit">
    
</div>
</form>


